include default

bindsym $mod+Return exec foot
bindsym $mod+d exec bemenu-run

workspace_layout tabbed
#default_border none
hide_edge_borders both
font pango:sans 10px
client.focused          #405870 #405870 #ffffff
client.focused_inactive #484848 #484848 #ffffff
client.unfocused        #303030 #303030 #a0a0a0
client.urgent           #900000 #900000 #ffffff
client.placeholder      #0c0c0c #0c0c0c #ffffff

bar {
	mode hide
	position bottom
	status_command i3status-rs
	colors {
		statusline #ffffff
		background #404040
	}
}

input "type:keyboard" {
	xkb_layout jp
	xkb_options ctrl:nocaps,japan:hztg_escape
}

input "type:touchpad" {
	tap enabled
}

output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_2048x1536.png fill

exec foot
